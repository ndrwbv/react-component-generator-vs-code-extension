{
  "name": "react-component-generator",
  "displayName": "React component generator",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.createReactStyledFolder",
        "title": "New React Styled component"
      },
      {
        "command": "extension.createSingleReactComponent",
        "title": "New React component"
      },
      {
        "command": "extension.createRTKSlice",
        "title": "New RTK slice"
      },
      {
        "command": "extension.createStoryFolder",
        "title": "New Story folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createReactStyledFolder",
          "group": "reactGroup@1"
        },
        {
          "command": "extension.createSingleReactComponent",
          "group": "reactGroup@2"
        },
        {
          "command": "extension.createRTKSlice",
          "group": "reactGroup@3"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
